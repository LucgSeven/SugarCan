.games .list .item .list-media .list-count {
    position: absolute;
    left: 10rpx;
    bottom: 10rpx;
    font-size: 24rpx;
    color: #fff;
    z-index: 10;
}

.games .list .item .list-media .list-count:before {
    display: inline-block;
    margin-right: 6rpx;
    content: '';
    width: 20rpx;
    height: 20rpx;
    background: red;
    background-size: contain;
}

.games .list .item .list-text {
    display: block;
    padding: 10rpx 14rpx;
    font-size: 30rpx;
    width: 300rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.games .list .gameItem {
    margin-top: 10rpx;
    margin-bottom: 20rpx;
    margin-left: 10rpx;
}

.games .list .list-author {
    display: block;
    padding: 0rpx 14rpx 10rpx;
    font-size: 22rpx;
}