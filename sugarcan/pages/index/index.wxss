/**index.wxss**/
.games {
    margin: 30rpx 20rpx;
}

.games .title {
    display: flex;
    margin-bottom: 20rpx;
}

.games .list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.games .list .item {
    background-color: #fff;
}

.games .list .item .img {
    position: relative;
    vertical-align: top;
    width: 320rpx;
    height: 320rpx;
}

.games .list .item .list-media {
    position: relative;
    width: 320rpx;
    height: 320rpx;
    box-sizing: border-box;
    overflow: hidden;
}

